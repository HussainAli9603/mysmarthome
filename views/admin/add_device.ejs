  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Add Device</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Add Device</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
    
          <!-- right column -->
          <div class="col-md-12">

            <!-- general form elements disabled -->
            <div class="card card-warning">
              <div class="card-header">
                <h3 class="card-title">Add Device</h3>
              </div>

              <% if(success){ %>
               <div class="container">
                  <div class="alert" style="background-color: #FFFFFF;color:blue">
                      <%= success %>
                       <a href="" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                  </div>
               </div>
            <% } %>

              <!-- /.card-header -->
              <div class="card-body">
                <form action="/add-device" method="POST"> 
                  <div class="row">
                     <div class="col-sm-6">
                      <!-- text input -->
                       <label>Name</label>
                      <div class="form-group">
                        <select name="deviceName" class="form-control" required>
                          <option value="Fan">Fan</option>
                          <option value="Bulb">Bulb</option>
                          <option value="AC">AC</option>
                          <option value="TV">TV</option>
                          <option value="Radio">Radio</option>
                          <option value="Music Players">Music Players</option>
                          <option value="Fridge-freezer">fridge-freezer</option>
                          <option value="Hob">Hob</option>
                          <option value="Oven">Oven</option>
                          <option value="Microwave">Microwave</option>
                          <option value="Wifi">Wifi</option>
                          <option value="Camera">Camera</option>
                          <option value="Refrigerator">Refrigerator</option>
                          <option value="Kettle">Kettle</option>
                          <option value="Rice cooker">Rice cooker</option>
                          <option value="Juicer">Juicer</option>
                          <option value="Smart lock">Smart lock</option>
                          <option value="Phone charges">Phone charges</option>
                          <option value="Lamp">Lamp</option>

                        </select>
                    </div>
                   </div>
                
                    <div class="col-sm-6">
                      <!-- text input -->
                      <div class="form-group">
                        <label>ON/OFF</label>
                         <div class="form-group">
                        <select name="onOff" class="form-control" required>
                          <option value="NotApplicable">NA(not applicable)</option>
                          <option value="on">ON</option>
                          <option value="off">OFF</option>
                        </select>
                    </div>
                      </div>
                    </div>
                   
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <!-- text input -->
                     <div class="form-group">
                        <label>OPEN/CLOSE</label>
                         <div class="form-group">
                        <select name="openClose" class="form-control" required>
                          <option value="NotApplicable">NA(not applicable)</option>
                          <option value="open">OPEN</option>
                          <option value="close">CLOSE</option>
                        </select>
                    </div>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <!-- text input -->
                      <div class="form-group">
                        <label>Temperature</label>
                        <select name="temperature" class="form-control" required>
                          <option value="NotApplicable">NA(not applicable)</option>
                          <option value="-06">-06 Degree</option>
                          <option value="-05">-05 Degree</option>
                          <option value="-04">-04 Degree</option>
                          <option value="-03">-03 Degree</option>
                          <option value="-02">-02 Degree</option>
                          <option value="-01">-01 Degree</option>
                          <option value=" 01"> 01 Degree</option>
                          <option value=" 02"> 02 Degree</option>
                          <option value=" 03"> 03 Degree</option>
                          <option value=" 04"> 04 Degree</option>
                          <option value=" 05"> 05 Degree</option>
                          <option value=" 06"> 06 Degree</option>
                          <option value=" 07"> 07 Degree</option>
                          <option value=" 08"> 08 Degree</option>
                          <option value=" 09"> 09 Degree</option>
                          <option value=" 10"> 10 Degree</option>
                          <option value=" 12"> 12 Degree</option>
                          <option value=" 13"> 13 Degree</option>
                          <option value=" 14"> 14 Degree</option>
                          <option value=" 15"> 15 Degree</option>
                          <option value=" 16"> 16 Degree</option>
                          <option value=" 17"> 17 Degree</option>
                          <option value=" 18"> 18 Degree</option>
                          <option value=" 19"> 19 Degree</option>
                          <option value=" 20"> 20 Degree</option>
                          <option value=" 21"> 21 Degree</option>
                        </select>
                      </div>
                    </div>
                   
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <!-- text input -->
                      <label>Volume</label>
                      <div class="form-group">
                          <select name="volume" class="form-control" required>
                          <option value="NotApplicable">NA(not applicable)</option>
                          <option value="01">01</option>
                          <option value="02">02 </option>
                          <option value="03">03 </option>
                          <option value="04">04 </option>
                          <option value="05">05 </option>
                          <option value="06">06 </option>
                        </select>
                      </div>
                    </div>
                     <div class="col-sm-6">
                      <!-- text input -->
                      <div class="form-group">
                        <label>Color</label>
                        <input type="text" name="color" class="form-control" placeholder="Enter ..." required>
                      </div>
                    </div>
                   
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <!-- text input -->
                      <label>Channel</label>
                      <div class="form-group">
                          <select name="channel" class="form-control" required>
                          <option value="NotApplicable">NA(not applicable)</option>
                          <option value="01">01</option>
                          <option value="02">02 </option>
                          <option value="03">03 </option>
                          <option value="04">04 </option>
                          <option value="05">05 </option>
                          <option value="06">06 </option>
                        </select>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-sm-6">
                      <!-- text input -->
                      <div class="form-group">
                        <input type="submit" class="btn btn-primary" placeholder="Enter ...">
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <!-- /.card-body -->
            </div>
            
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
